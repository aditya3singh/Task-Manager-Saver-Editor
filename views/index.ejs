<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task-File-Saver-Editor</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <!-- Task Creation Form -->
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input 
                    class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" 
                    type="text" 
                    name="title" 
                    placeholder="Title goes here" 
                    required>
                <textarea 
                    class="block mt-2 w-full rounded-md outline-none px-5 py-2 bg-zinc-800 resize-none"
                    name="details" 
                    placeholder="Write your task details here..." 
                    required></textarea>
                <input 
                    class="mt-2 bg-red-800 px-5 py-2 rounded-md" 
                    type="submit" 
                    value="Add Task">
            </form>
        </div>

        <!-- Tasks Display -->
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <!-- Display Task Title -->
                        <h1 class="text-white text-2xl tracking-tighter"><%= val.replace('.txt', '') %></h1>
                        <!-- Link to Task Details -->
                         <div class="flex justify-between item-center">
                             <a class="text-blue-500 inline-block" href="/file/<%= val %>">Read more</a>
                             <a class="text-zinc-600" href="/edit/<%= val %>">edit</a>
                         </div>
                    </div>
                <% }); %>
            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet.</h3>
            <% } %>
        </div>
    </div>
</body>

</html>
